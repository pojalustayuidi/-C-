#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int count, result;
	cout << "Введите число:  ";
	cin >> count;
	while (count != 0) {
		result = 1;
		for (int i = 2; i <= count; i++) {
			result *= i;

		}
		cout << "Результат:   " << result << endl;
		cout << "Введите число:  ";
		cin >> count;



	}
}
